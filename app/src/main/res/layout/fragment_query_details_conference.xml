<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_above="@+id/hr">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="200dp"
            android:paddingRight="200dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="        会议名称："
                android:textSize="16sp"
                android:textColor="#272727"
                android:layout_centerVertical="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/shape_sponsor_essential_information_input"
                android:layout_toRightOf="@+id/name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp">

                <EditText
                    android:id="@+id/title_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入会议名称"
                    android:textColorHint="#5F5F5F"
                    android:textColor="#5F5F5F"
                    android:textSize="14sp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textCursorDrawable="@null"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="200dp"
            android:paddingRight="200dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会议开始时间："
                android:textSize="16sp"
                android:textColor="#272727"
                android:gravity="right"
                android:layout_centerVertical="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/shape_sponsor_essential_information_input"
                android:layout_toRightOf="@+id/start"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp">

                <TextView
                    android:id="@+id/start_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text="请选择会议开始时间"
                    android:textColorHint="#5F5F5F"
                    android:textColor="#5F5F5F"
                    android:textSize="14sp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:gravity="center_vertical"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="200dp"
            android:paddingRight="200dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会议结束时间："
                android:textSize="16sp"
                android:textColor="#272727"
                android:gravity="right"
                android:layout_centerVertical="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/shape_sponsor_essential_information_input"
                android:layout_toRightOf="@+id/end"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp">

                <TextView
                    android:id="@+id/end_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text="请选择会议结束时间"
                    android:textColorHint="#5F5F5F"
                    android:textColor="#5F5F5F"
                    android:textSize="14sp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:gravity="center_vertical"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="200dp"
            android:paddingRight="200dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="        会议地点："
                android:textSize="16sp"
                android:textColor="#272727"
                android:layout_centerVertical="true"
                android:gravity="right" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/shape_sponsor_essential_information_input"
                android:layout_toRightOf="@+id/address"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp">

                <EditText
                    android:id="@+id/address_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入会议地点"
                    android:textColorHint="#5F5F5F"
                    android:textColor="#5F5F5F"
                    android:textSize="14sp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textCursorDrawable="@null"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="200dp"
            android:paddingRight="200dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="        会议简介："
                android:textSize="16sp"
                android:textColor="#272727"
                android:gravity="right" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/shape_sponsor_essential_information_input"
                android:layout_toRightOf="@+id/introduction"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp">

                <EditText
                    android:id="@+id/info_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入会议简介"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="6dp"
                    android:textColor="#5F5F5F"
                    android:textColorHint="#5F5F5F"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F0F2F5"
        android:layout_above="@+id/down_re">
    </View>

    <RelativeLayout
        android:id="@+id/down_re"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/preservation"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_roun_btn"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/sign"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_marginRight="12dp"/>

        <TextView
            android:id="@+id/sign"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_roun_btn"
            android:text="签到"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/up"
            android:layout_marginRight="12dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:drawablePadding="4dp"/>

        <TextView
            android:id="@+id/up"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_roun_btn"
            android:text="修改"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"/>

    </RelativeLayout>

</RelativeLayout>