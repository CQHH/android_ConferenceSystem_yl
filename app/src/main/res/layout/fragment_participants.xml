<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_above="@+id/hr">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="会议主持人"
                android:textSize="16sp"
                android:textColor="#272727"
                android:paddingLeft="12dp"
                android:gravity="center_vertical"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="#FAFAFA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_toLeftOf="@+id/add"
                    android:layout_marginRight="100dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="编号"
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="名称"
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="部门"
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="职务"
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:gravity="center"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/add_z"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:text="编辑人员"
                    android:textColor="#4B97FF"
                    android:textSize="14sp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:gravity="center"
                    android:background="@drawable/shape_participants_btn"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <com.em.baseframe.view.listview.ListViewForScrollView
                android:id="@+id/listview_z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.em.baseframe.view.listview.ListViewForScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="参会人员"
                android:textSize="16sp"
                android:textColor="#272727"
                android:paddingLeft="12dp"
                android:gravity="center_vertical"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="#FAFAFA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_toLeftOf="@+id/add"
                    android:layout_marginRight="100dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="编号"
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="名称"
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="部门"
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="职务"
                        android:textSize="16sp"
                        android:textColor="#272727"
                        android:gravity="center"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/add_c"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:text="编辑人员"
                    android:textColor="#4B97FF"
                    android:textSize="14sp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:gravity="center"
                    android:background="@drawable/shape_participants_btn"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <com.em.baseframe.view.listview.ListViewForScrollView
                android:id="@+id/listview_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.em.baseframe.view.listview.ListViewForScrollView>

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F0F2F5"
        android:layout_above="@+id/down_re">
    </View>

    <RelativeLayout
        android:id="@+id/down_re"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/back"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_roun_btn"
            android:text="上一步"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/preservation"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_roun_btn"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/next"
            android:layout_marginRight="12dp"/>

        <TextView
            android:id="@+id/next"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_roun_btn"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:drawablePadding="4dp"/>


    </RelativeLayout>

