<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#ffffff"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1、张小光同志汇报区委工作情况"
            android:textSize="16sp"
            android:textColor="#272727"
            android:singleLine="true"
            android:maxEms="20"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汇报人：张小光"
                android:textSize="14sp"
                android:textColor="#5F5F5F"/>

            <TextView
                android:id="@+id/po"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="区委书记"
                android:textSize="14sp"
                android:textColor="#5F5F5F"
                android:layout_marginLeft="30dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/delete"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_topics_delect_btn"
        android:text="删除"
        android:textColor="#F5222D"
        android:textSize="14sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/updata"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_topics_updata_btn"
        android:layout_toLeftOf="@+id/delete"
        android:text="修改"
        android:textColor="#4B97FF"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginRight="12dp"/>

    <TextView
        android:id="@+id/up"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_topics_updata_btn"
        android:text="上传附件"
        android:textColor="#4B97FF"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_toLeftOf="@+id/updata"
        android:layout_marginRight="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"/>

    <ImageView
        android:id="@+id/down_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/down"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/up"
        android:layout_marginRight="16dp"
        android:padding="4dp"/>

    <ImageView
        android:id="@+id/up_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/up"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/down_img"
        android:layout_marginRight="8dp"
        android:padding="4dp"/>

</RelativeLayout>