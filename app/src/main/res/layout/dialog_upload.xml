<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/shape_person_center_roun">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="18sp"
        android:textColor="#222222"
        android:layout_gravity="center_horizontal"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_person_center_update_input">
        
        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:textColorHint="#ACACAC"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#222222"/>
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_person_center_update_input"
            android:layout_toLeftOf="@+id/file_btn"
            android:layout_marginRight="12dp">

            <TextView
                android:id="@+id/file_path"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:textColor="#222222"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/file_btn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/shape_person_center_update_btn"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/btn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="上传"
        android:gravity="center"
        android:background="@drawable/shape_person_center_update_btn"
        android:layout_marginBottom="12dp"/>
    
</LinearLayout>