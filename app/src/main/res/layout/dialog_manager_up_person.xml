<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/shape_person_center_roun">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#222222"
        android:text="修改成员"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="成员名字："
            android:textSize="16sp"
            android:textColor="#222222"
            android:gravity="right|center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_person_center_update_input"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@null"
                android:textColorHint="#ACACAC"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#222222"
                android:hint="请输入成员名字"
                android:textCursorDrawable="@null"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="请选择部门："
            android:textSize="16sp"
            android:textColor="#222222"
            android:gravity="right|center"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spinner_d"
            android:gravity="center_vertical"
            android:spinnerMode="dropdown"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar">
        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="请选择职务："
            android:textSize="16sp"
            android:textColor="#222222"
            android:gravity="right|center"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spinner_b"
            android:gravity="center_vertical"
            android:spinnerMode="dropdown"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar">
        </Spinner>

    </LinearLayout>

    <TextView
        android:id="@+id/btn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="确定"
        android:gravity="center"
        android:background="@drawable/shape_person_center_update_btn"
        android:layout_marginBottom="12dp"/>

</LinearLayout>